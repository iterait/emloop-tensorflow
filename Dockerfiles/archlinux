FROM pritunl/archlinux
MAINTAINER Cognexa Solutions s.r.o. <docker@cognexa.com>

# copy the repository to the docker environment
COPY . cxflow-tensorflow
WORKDIR cxflow-tensorflow

# install dependencies
RUN pacman --noconfirm -S python python-pip base-devel

# install
RUN pip3 install git+https://gitlab.com/Cognexa/cxflow.git && \
    pip3 install . && \
    python3 setup.py test
